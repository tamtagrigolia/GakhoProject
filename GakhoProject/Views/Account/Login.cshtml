@model UserLoginModel
@{
    Layout = null;

}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/slider.css" asp-append-version="true" />


<!DOCTYPE html>
<html lang="en">


    <div class="login-form">
        <div class="text">
          ავტორიზაცია
        </div>
    <form asp-controller="Account" asp-action="Login">
        <div class="field">
                <div class="fas fa-envelope"></div>
            <input type="text" placeholder="Email" asp-for="Email">

            </div>
            <div class="field">
                <div class="fas fa-lock"></div>
            <input type="password"  placeholder ="Password"asp-for="Password">
        </div>
            <button>LOGIN</button>
            <div class="link">
                Not a member?
            <a class="btn btn-outline-success" asp-area="" asp-controller="Account" asp-action="Register">რეგისტრაცია</a>
        </div>

        </form>
    </div>

<style>

</style>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
